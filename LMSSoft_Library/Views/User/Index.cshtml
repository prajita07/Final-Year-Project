@{
    ViewData["Title"] = "User Login";
    Layout = null;
}

<link rel="stylesheet" href="~/Content/content/css/bootstrap.min.css" />
<link rel="stylesheet" href="~/Content/content/font-awesome/4.5.0/css/font-awesome.min.css" />


<link rel="stylesheet" href="~/Content/content/css/fonts.googleapis.com.css" />

<!-- ace styles -->
<link rel="stylesheet" href="~/Content/content/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />


<link rel="stylesheet" href="~/Content/content/css/ace-skins.min.css" />
<link rel="stylesheet" href="~/Content/content/css/ace-rtl.min.css" />
<link href="~/Content/css/login.css" rel="stylesheet" />

<script src="~/Content/content/js/ace-extra.min.js"></script>


<div class="panel-body">

    <div class="login-form">

        <h4 class="header blue lighter bigger">
            <i class="ace-icon fa fa-book green"></i>
            Library Management System
        </h4>
        <div class="space-6"></div>
        <form asp-controller="login" asp-action="login" method="post">
            <h4 class="text-center">Enter your login details.</h4>
            @{
                if (TempData["UserMessage"] != null)
                {
                    var message = (LMSSoft_Library.Controllers.Message)TempData["UserMessage"];
                    <div class="errorHandler alert alert-danger">
                        <i class="fa fa-remove-sign"></i> <strong>@message.Title &nbsp; ! </strong>&nbsp;@message.MessageText
                    </div>
                }
            }
            <div class="form-group">
                <input name="username" type="text" class="form-control" placeholder="Username" required="required" />
            </div>
            <div class="form-group">
                <input name="password" type="password" class="form-control" placeholder="Password" required="required" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Log in</button>
            </div>

        </form>

    </div>
</div>
